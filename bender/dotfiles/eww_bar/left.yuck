(defwidget left-bar []
  (box :orientation "horizontal"
       :class "left-bar"
       :halign "start"
       :valign "center"
       :style "padding: 2px 10px;"
   (for workspace in workspaces
      (button :class { workspace.focused ? "active-workspace" : "inactive-workspace"}
        { workspace.name }))))

(defpoll workspaces :interval ".05s"
  "./scripts/workspace.sh")
